{
  "name": "quotingfast-brain-sms",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "lerna": "~6.6.1"
  },
  "scripts": {
    "start": "cd apps/platform && npm start",
    "build": "cd apps/platform && npm run build",
    "heroku-postbuild": "cd apps/platform && npm install && npm run build",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "docker:build": "lerna run docker:build",
    "docker:build:push": "lerna run docker:build:push",
    "analyze:ui:bundle": "lerna run build && npx source-map-explorer './apps/ui/build/static/js/*.js'",
    "package:build": "lerna run package:build",
    "package:publish": "lerna run package:publish"
  }
}
