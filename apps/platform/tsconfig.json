{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",                        
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./build",
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "typeRoots": [
      "node_modules/@types",
      "@types",
      "src/@types"
    ]
  },
  "include": [
    "./src/**/*",
    "@types",
    "tsconfig.json"
  ],
  "exclude": [
      "node_modules",
      "./**/*.spec.ts",
      "./**/__mocks__/*"
  ]
}
