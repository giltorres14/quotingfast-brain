FROM node:18

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev for build)
RUN npm ci

# Copy source code
COPY . .

# Build TypeScript
RUN npm run build

# Install only production dependencies
RUN npm ci --only=production && npm cache clean --force

# Set environment
ENV NODE_ENV=production

# Expose port
EXPOSE 10000

# Start the application
CMD ["node", "build/boot.js"]