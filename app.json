{
  "name": "QuotingFast Lead Management Platform",
  "description": "Complete lead management system with SMS/Email marketing automation",
  "repository": "https://github.com/giltorres14/quotingfast-brain",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["laravel", "php", "lead-management", "sms", "email-marketing", "parcelvoy"],
  "image": "heroku/php",
  "addons": [
    "heroku-postgresql:mini"
  ],
  "env": {
    "APP_ENV": {
      "description": "Laravel application environment",
      "value": "production"
    },
    "APP_DEBUG": {
      "description": "Laravel debug mode",
      "value": "false"
    },
    "APP_KEY": {
      "description": "Laravel application key",
      "generator": "secret"
    },
    "APP_URL": {
      "description": "Application URL",
      "value": "https://your-app-name.herokuapp.com"
    },
    "DB_CONNECTION": {
      "description": "Database connection type",
      "value": "pgsql"
    },
    "CACHE_DRIVER": {
      "description": "Cache driver",
      "value": "file"
    },
    "SESSION_DRIVER": {
      "description": "Session driver",
      "value": "file"
    },
    "QUEUE_CONNECTION": {
      "description": "Queue connection",
      "value": "sync"
    },
    "TWILIO_ACCOUNT_SID": {
      "description": "Twilio Account SID for SMS",
      "value": "YOUR_TWILIO_ACCOUNT_SID"
    },
    "TWILIO_AUTH_TOKEN": {
      "description": "Twilio Auth Token",
      "value": "YOUR_TWILIO_AUTH_TOKEN"
    },
    "TWILIO_PHONE_NUMBER": {
      "description": "Twilio Phone Number",
      "value": "+18445117954"
    },
    "NODE_ENV": {
      "description": "Node.js environment for Parcelvoy",
      "value": "production"
    },
    "API_SECRET": {
      "description": "API secret for Parcelvoy",
      "generator": "secret"
    },
    "JWT_SECRET": {
      "description": "JWT secret for authentication",
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/php"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "scripts": {
    "postdeploy": "cd brain && php artisan migrate --force && php artisan key:generate"
  }
}