{
  "name": "giltorres/quotingfast-brain",
  "type": "project",
  "description": "Monorepo for QuotingFast platform with Laravel brain and Parcelvoy integration",
  "keywords": ["laravel", "sms", "email", "lead-management"],
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "ext-pdo": "*",
    "ext-pgsql": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "brain/app/",
      "Database\\Factories\\": "brain/database/factories/",
      "Database\\Seeders\\": "brain/database/seeders/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('brain/.env') || copy('brain/.env.example', 'brain/.env');\""
    ],
    "post-create-project-cmd": [
      "cd brain && php artisan key:generate --ansi"
    ],
    "compile": [
      "cd brain && php artisan config:cache",
      "cd brain && php artisan route:cache"
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "platform": {
      "php": "8.1"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}